<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.book_detail.BookDetailFragment"
    android:padding="12dp"
    android:background="#F3EFF4"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <!-- Book Thumbnail, Title, Author, and Rating -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/bookThumbnail"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/book_thumbnail"
                    tools:src="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/bookTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Book Title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/bookAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Authors"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/publishedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Published Date"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical">

                        <RatingBar
                            android:id="@+id/bookRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="3"
                            android:scaleX="0.5"
                            android:scaleY="0.5" />

                        <TextView
                            android:id="@+id/bookRatingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="222"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/addToLibrary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_to_library"
                android:textSize="8sp"
                app:icon="@drawable/ic_library"
                app:iconGravity="top"
                app:iconSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buyBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buy_this_book"
                app:icon="@drawable/ic_shop"
                app:iconGravity="top"
                app:iconSize="24dp"
                android:layout_marginStart="16dp"
                android:textSize="8sp"
                />


        </LinearLayout>

        <!-- Genres -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/genre1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Genre1"
                    style="@style/Widget.Material3.Chip.Assist" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/genre2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Genre2"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_marginStart="8dp" />

                <!-- Add more genres as needed -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Description -->
        <TextView
            android:id="@+id/bookDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum. kepasa membeli bebek, bebek di beli udah di goreng."
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <!-- Similar Books -->
        <TextView
            android:id="@+id/similarBooksTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/similiar_book"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_similiarBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:listitem="@layout/item_rv2"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:orientation="horizontal"
            tools:clipToPadding="false" />
    </LinearLayout>

</ScrollView>